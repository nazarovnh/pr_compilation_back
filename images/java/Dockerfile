FROM openjdk:11.0.6-jdk-slim

WORKDIR /app
ARG EXECUTION_PATH
ARG SOURCE_CODE_FILE_NAME

ARG INPUT

ADD . .

RUN chmod a+x ${EXECUTION_PATH}/${SOURCE_CODE_FILE_NAME}

ENTRYPOINT ["/bin/sh", "-c", "javac ${EXECUTION_PATH}/${SOURCE_CODE_FILE_NAME}"]
ENTRYPOINT ["/bin/sh", "-c", "java ${EXECUTION_PATH}/${SOURCE_CODE_FILE_NAME} ${INPUT}"]